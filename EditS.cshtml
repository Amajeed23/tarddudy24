@{
    Layout = "_Admin";
    @model IEnumerable<Schedule>

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Schedule</title>
    <style>
        body {
            color: #E4E5E6;
        }

        .cont {
            position: absolute;
            top: 30%;
            left: 35%;
            width: 30%;
        }

            .cont h1 {
                text-align: center;
            }

            .cont button {
                margin-left: 35%;
                width: 30%;
            }
    </style>
</head>

<body dir="ltr">
    <div class="cont">
        <h1>Edit Bus</h1>
        <form asp-action="EditS">
            @foreach (var schedule in ViewBag.Schedule)
            {
                <div class="form-group">
                    <label for="StationFrom">From :</label>
                    <input name="StationFrom" type="text" class="form-control" value="@schedule.StationFrom" readonly/>
                    <span validation-for="StationFrom" class="text-danger"></span>
                </div>

                <br />
                <div class="form-group">
                    <label for="StationTo">To : </label>
                    <input type="text" name="StationTo" class="form-control" value="@schedule.StationTo" readonly>
                    <span validation-for="StationTo" class="text-danger"></span>
                </div>

                <br />
                <div class="form-group">
                    <label for="interval">Time :</label>
                    <input type="time" name="Time" value="@schedule.Time" step="3600" />

                </div>

                <br />
            }
            <div class="form-group">
                <label for="interval">Bus Number :</label>
                <select name="BusID">

                    @foreach (var shift in ViewBag.busnumber)
                    {
                      <option name="BusID" value="@shift.BusID">@shift.BusNumber</option>
                        @foreach (var Bus in ViewBag.Bus)
                        {
                            <option name="BusID" value="@Bus.BusID">@Bus.BusNumber</option>
                            
                            
                           
                        }

                    }
                </select>
                <br />

                <span validation-for="BusID" class="text-danger"></span>
            </div></br>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</body>
</html>