<body>
    <div class="content-T">
        <main>
            <br /><br />
            <table>
                <thead>
                    <tr>
                        <th>Number</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Price</th>
                      
                    </tr>
                </thead>
                <tbody>
                     @foreach (var ticket in Model){
                    <tr>
                            <td>@ticket.TicketID</td>
                            <td>@ticket.StationFrom</td>
                            <td>@ticket.StationTo</td>
                            <td>@ticket.TicketDate.ToString("dd/MM/yyyy")</td>
                            <td>@ticket.Time</td>
                        <td>$3</td>
                        
                    </tr>
                     }
                </tbody>
            </table>
        </main>
    </div>
</body>
