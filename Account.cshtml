<body>
    <div class="container1">
    <div class="head">
        <h1>Passenger Account</h1>

    </div>

    <main>
        <form asp-action="Account" method="post" id="update-form">
            @foreach (var passenger in Model)
            {
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="navigation-menu">
                                <ul>
                                    <li><a id="myLink1" asp-action="Account">General Information</a></li>
                                    <li><a id="myLink2" asp-action="ChangePassword">Change Password</a></li>
                                    <li><a id="myLink3" asp-action="DelAcc">Delete Account</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div id="myDiv1">
                                <h3>General Information</h3>
                                <form asp-action="Account" method="post">
                                    <div class="form-group">
                                        <label for="username">Username:</label>
                                        <input type="text" class="form-control" id="username" value="@passenger.Passname" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="phone-number">Phone Number:</label>
                                        <input type="text" name="phone" class="form-control" id="phone-number" value="@passenger.Passphone">
                                            @if (ViewBag.ErrorMessage != null)
                                            {
                                                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                                            }
                                            @if (ViewBag.Succ != null)
                                            {
                                                <div class="success-alert">@ViewBag.Succ</div>
                                            }
                                    </div>
                                    <div class="form-group">
                                        <label for="birth-date">Birth Date:</label>
                                        <input type="text" class="form-control" id="birth-date" value="@passenger.Passbirth.ToString("dd/MM/yyyy")" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="medical-condition">Medical Condition:</label>
                                        @if (passenger.PassCondition == 1)
                                        {
                                            <input type="text" class="form-control" id="username" value="Yes" readonly>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control" id="username" value="No" readonly>
                                        }
                                    </div>
                                       
                                    <button type="submit" name="Update" value="Clicked" class="btn btn-primary">Update General Information</button>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </form>
    </main>
    </div>
</body>
