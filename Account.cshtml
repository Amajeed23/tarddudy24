            padding: 10px;
            background-color: rgb(0,0,0,0);
            
        }

            /* Set the font weight and color for the navigation links */
            .navigation-menu a {
                font-weight: bold;
                color: #333;
            }

                /* Set the padding and background color for the active navigation link */
                .navigation-menu a.active {
                    padding: 5px 10px;
                    background-color: #ddd;
                }

        /* Set the border and padding for the form inputs */
        .form-control {
            border: 1px solid #ccc;
            padding: 5px;
        }

        /* Set the margin and font weight for the form labels */
        .form-group label {
            margin-bottom: 5px;
            font-weight: bold;
        }

        /* Set the margin for the form buttons */
        button[type="submit"],
        button[type="button"] {
            margin-top: 10px;
        }

        /* Set the color and background color for the primary button */
        .btn-primary {
            color: #fff;
            background-color: #337ab7;
            border-color: #2e6da4;
        }

            /* Set the hover color and background color for the primary button */
            .btn-primary:hover {
                color: #fff;
                background-color: #286090;
                border-color: #204d74;
            }

        /* Set the color and background color for the danger button */
        .btn-danger {
            color: #fff;
            background-color: #d9534f;
            border-color: #d43f3a;
        }

            /* Set the hover color and background color for the danger button */
            .btn-danger:hover {
                color: #fff;
                background-color: #c9302c;
                border-color: #ac2925;
            }

        /* Set the font size and margin for the page title */
        h1 {
            font-size: 24px;
            margin-top: 0;
        }

        /* Set the font size for the section titles */
        h3 {
            font-size: 20px;
        }

        .navigation-menu a.active {
            background-color: #ddd;
        }
        .head{
            position:relative;
            left:26%;
            width:16.5%;
        }

        .success-alert {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
