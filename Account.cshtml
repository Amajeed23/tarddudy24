        /* Set the background color for the entire page */
        body {
            background-color: #f8f8f8;
        }

        /* Set the padding for the container */
        .container {
            padding: 20px;
        }

        .container1 {
            animation: fadein 1s;
            padding-top:5%;
        }

        @@keyframes fadein {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

